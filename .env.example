# Environment Variables for Rflix-API

# Server Configuration
NODE_ENV=development
PORT=3000

# Jellyfin Server
JELLYFIN_URL=http://localhost:8096
JELLYFIN_API_KEY=your_jellyfin_api_key_here

# JWT Secret
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=30d

# Bcrypt Salt Rounds
BCRYPT_SALT_ROUNDS=12

# Captcha Configuration (Default: Cloudflare Turnstile)
CAPTCHA_PROVIDER=turnstile
TURNSTILE_SITE_KEY=your_cloudflare_turnstile_site_key
TURNSTILE_SECRET_KEY=your_cloudflare_turnstile_secret_key

# Google reCAPTCHA (Fallback)
RECAPTCHA_SITE_KEY=your_google_recaptcha_site_key
RECAPTCHA_SECRET=your_google_recaptcha_secret_key

# CORS Configuration
CORS_ORIGIN=https://rflix.web.id

# SMTP Configuration (Email Notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_app_password

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Firebase Cloud Messaging (Push Notifications)
FCM_SERVER_KEY=your_fcm_server_key_here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=200
RATE_LIMIT_LOGIN_MAX=5
RATE_LIMIT_ADMIN_MAX=50

# Scheduler Intervals (in milliseconds)
DISABLE_EXPIRED_INTERVAL=3600000
STATS_COLLECT_INTERVAL=3600000
MEDIA_MONITOR_INTERVAL=1800000
BACKUP_DB_INTERVAL=86400000
ORPHAN_CLEANUP_INTERVAL=86400000

# Database Path
DB_PATH=./data/rflix.db

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log
